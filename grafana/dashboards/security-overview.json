          "rawSql": "SELECT s.target_url || ' (' || TO_CHAR(s.created_at, 'DD/MM') || ')' AS scan, COUNT(*) FILTER (WHERE f.severity = 'Critical') AS \"Critical\", COUNT(*) FILTER (WHERE f.severity = 'High') AS \"High\", COUNT(*) FILTER (WHERE f.severity = 'Medium') AS \"Medium\", COUNT(*) FILTER (WHERE f.severity = 'Low') AS \"Low\", COUNT(*) FILTER (WHERE f.severity = 'Info') AS \"Info\" FROM scans s LEFT JOIN findings f ON f.scan_id = s.id WHERE s.status = 'completed' GROUP BY s.id, s.target_url, s.created_at ORDER BY s.created_at DESC LIMIT 10",
